<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tamboot.admin.system.mapper.SystemMenuMapper">
    <resultMap type="com.tamboot.admin.system.model.SystemMenuModel" id="Model"></resultMap>

    <insert id="insert">
        insert into system_menu (
            path,
            locale,
            name,
            icon,
            parent,
            order_index
        ) values (
            #{path},
            #{locale},
            #{name},
            #{icon},
            #{parent},
            #{orderIndex}
        )
    </insert>

    <update id="updateById">
        update system_menu
            <set>
                <if test="@com.tamboot.common.utils.StringUtils@isNotEmpty(path)">path = #{path},</if>
                <if test="locale != null">locale = #{locale},</if>
                <if test="@com.tamboot.common.utils.StringUtils@isNotEmpty(name)">name = #{name},</if>
                <if test="orderIndex != null">order_index = #{orderIndex},</if>
                icon = #{icon},
                parent = #{parent}
            </set>
        where id = #{id}
    </update>

    <delete id="deleteById">
        delete from system_menu where id = #{id}
    </delete>

    <select id="selectOneById" resultMap="Model">
        select * from system_menu where id = #{id}
    </select>

    <select id="selectAllByParent" resultMap="Model">
        select * from system_menu where parent = #{parent}
    </select>

    <select id="selectAll" resultMap="Model">
        select * from system_menu
    </select>

    <select id="selectAllByRoleCodes" resultMap="Model">
        select
            DISTINCT(sm.id),
            sm.name,
            sm.path,
            sm.locale,
            sm.icon,
            sm.order_index,
            sm.parent
        from system_role_menu srm
            left join system_menu sm on sm.id = srm.menu_id
        where srm.role_code in
            <foreach collection="roleCodes" item="roleCode" open="(" separator="," close=")">
                #{roleCode}
            </foreach>
    </select>

    <select id="selectAllIdsByRoleCodes" resultType="java.lang.Long">
        select
            DISTINCT(sm.id)
        from system_role_menu srm
            left join system_menu sm on sm.id = srm.menu_id
        where srm.role_code in
        <foreach collection="roleCodes" item="roleCode" open="(" separator="," close=")">
            #{roleCode}
        </foreach>
    </select>

    <select id="selectAllByIds" resultMap="Model">
        select
            *
        from system_menu
        where id in
            <foreach collection="ids" item="id" open="(" separator="," close=")">
                #{id}
            </foreach>
    </select>
</mapper>
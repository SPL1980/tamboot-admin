<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tamboot.admin.system.mapper.SystemRoleMapper">
    <resultMap type="com.tamboot.admin.system.model.SystemRoleModel" id="Model"></resultMap>

    <insert id="insert">
        insert into system_role (
            role_code,
            role_name,
            role_desc
        ) values (
            #{roleCode},
            #{roleName},
            #{roleDesc}
        )
    </insert>

    <update id="updateById">
        update system_role
            <set>
                <if test="@com.tamboot.common.utils.StringUtils@isNotEmpty(roleName)">role_name = #{roleName},</if>
                <if test="@com.tamboot.common.utils.StringUtils@isNotEmpty(roleDesc)">role_desc = #{roleDesc}</if>
            </set>
        where id = #{id}
    </update>

    <delete id="deleteById">
        delete from system_role where id = #{id}
    </delete>

    <select id="selectOneByRoleCode" resultMap="Model">
        select * from system_role where role_code = #{roleCode} limit 0,1
    </select>

    <select id="selectOneById" resultMap="Model">
        select * from system_role where id = #{id} limit 0,1
    </select>

    <select id="pageByCondition" resultMap="Model">
        select
            *
        from system_role
        <where>
            <if test="@com.tamboot.common.utils.StringUtils@isNotEmpty(condition.roleCodeLike)">role_code like concat('%', #{condition.roleCodeLike}, '%')</if>
            <if test="@com.tamboot.common.utils.StringUtils@isNotEmpty(condition.roleNameLike)">and role_name like concat('%', #{condition.roleNameLike}, '%')</if>
        </where>
    </select>

    <select id="selectAllByRoleCodes" resultMap="Model">
        select
            *
        from system_role
        where role_code in
            <foreach collection="roleCodes" item="roleCode" open="(" separator="," close=")">
                #{roleCode}
            </foreach>
    </select>

    <select id="selectAll" resultMap="Model">
        select * from system_role
    </select>
</mapper>
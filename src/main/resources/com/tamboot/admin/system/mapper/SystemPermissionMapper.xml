<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tamboot.admin.system.mapper.SystemPermissionMapper">
    <resultMap type="com.tamboot.admin.system.model.SystemPermissionModel" id="Model"></resultMap>

    <insert id="insert">
        insert into system_permission (
            url,
            roles
        ) values (
            #{url},
            #{roles}
        )
    </insert>

    <update id="updateById">
        update system_permission
            <set>
                <if test="@com.tamboot.common.utils.StringUtils@isNotEmpty(url)">url = #{url},</if>
                <if test="@com.tamboot.common.utils.StringUtils@isNotEmpty(roles)">roles = #{roles}</if>
            </set>
        where id = #{id}
    </update>

    <delete id="deleteById">
        delete from system_permission where id = #{id}
    </delete>
    
    <select id="selectAll" resultMap="Model">
        select * from system_permission
    </select>

    <select id="selectOneByUrl" resultMap="Model">
        select * from system_permission where url = #{url} limit 0,1
    </select>

    <select id="selectOneById" resultMap="Model">
        select * from system_permission where id = #{id} limit 0,1
    </select>

    <select id="pageByCondition" resultMap="Model">
        select
            *
        from system_permission
        <where>
            <if test="@com.tamboot.common.utils.StringUtils@isNotEmpty(condition.urlLike)">url like concat('%', #{condition.urlLike}, '%')</if>
            <if test="@com.tamboot.common.utils.StringUtils@isNotEmpty(condition.roleCode)">and roles like concat('%', #{condition.roleCode}, '%')</if>
        </where>
        order by LENGTH(url) asc
    </select>
</mapper>